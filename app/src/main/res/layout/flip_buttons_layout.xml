<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="45dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="45dp">

        <Switch
            android:id="@+id/flipVerticalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/flipHorizontalButton"
            android:layout_alignBottom="@+id/flipHorizontalButton"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="25dp"
            android:switchPadding="@dimen/appbar_padding_top"
            android:text="Flip Vertical"
            android:textSize="12sp"
            android:theme="@style/DarkSwitch"/>

        <Switch
            android:id="@+id/flipHorizontalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="25dp"
            android:checked="false"
            android:splitTrack="false"
            android:switchPadding="@dimen/appbar_padding_top"
            android:text="Flip Horizontal"
            android:textAlignment="viewStart"
            android:textSize="12sp"
            android:theme="@style/DarkSwitch"
            tools:checked="false"/>

    </RelativeLayout>
</LinearLayout>
