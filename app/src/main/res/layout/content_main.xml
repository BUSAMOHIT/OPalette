<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/DARKER"
    android:orientation="vertical"
    android:visibility="visible"
    android:weightSum="1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="net.henryco.opalette.application.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:id="@+id/activeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.69"
            android:orientation="horizontal">

            <net.henryco.opalette.api.glES.glSurface.view.OPallSurfaceView
                android:id="@+id/opallView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.285"
            android:background="@color/DARK"
            android:visibility="visible">

            <net.henryco.opalette.api.utils.views.OPallHorizontalScrollView
                android:id="@+id/scrollOptionsView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|center"
                android:fadeScrollbars="false"
                android:fadingEdge="none"
                android:fadingEdgeLength="0dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:scrollbarStyle="insideOverlay"
                android:scrollbars="none"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/scrollContainer"
                    android:layout_width="match_parent"

                    android:layout_height="match_parent"
                    android:animationCache="false"
                    android:fadeScrollbars="false"
                    android:fadingEdge="none"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"

                    >

                </LinearLayout>
            </net.henryco.opalette.api.utils.views.OPallHorizontalScrollView>

            <FrameLayout
                android:id="@+id/fragmentSuperContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="?attr/colorButtonNormal"
                android:paddingBottom="@dimen/appbar_padding_top"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/appbar_padding_top"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/fragmentContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                </LinearLayout>
            </FrameLayout>

        </FrameLayout>

    </LinearLayout>
</LinearLayout>
