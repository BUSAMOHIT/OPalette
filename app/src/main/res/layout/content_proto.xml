<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_proto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/DARK"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="net.henryco.opalette.application.activities.ProtoActivity"
    tools:showIn="@layout/app_bar_proto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        >

        <net.henryco.opalette.api.glES.glSurface.view.OPallSurfaceView
            android:id="@+id/opallView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.69"
            android:clickable="true"
            android:elevation="22dp"
            android:translationZ="10dp"/>

    </LinearLayout>
</LinearLayout>
