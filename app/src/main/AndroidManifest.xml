<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="net.henryco.opalette">

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainBlanc">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.grad.ImageActivity"
            android:label="@string/title_activity_gradient"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".activity.triangle.TriActivity"/>
        <activity android:name=".activity.t1.T1Activity">
        </activity>
    </application>

</manifest>